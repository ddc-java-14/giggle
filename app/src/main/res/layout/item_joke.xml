<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/half_dynamic_spacing"
  android:background="?android:selectableItemBackground">


  <TextView
    android:id="@+id/created"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    style="@style/TextAppearance.AppCompat.Body1"

    tools:text="11/05/2021"/>

  <TextView
    android:id="@+id/content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    app:layout_constraintTop_toBottomOf="@id/created"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    style="@style/TextAppearance.AppCompat.Body1"
    android:maxLines="3"
    android:ellipsize="end"
    tools:text="love" />

  <TextView
    android:id="@+id/search_word"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    app:layout_constraintTop_toBottomOf="@id/content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    style="@style/TextAppearance.AppCompat.Body2"
    tools:text="search"/>

  <ImageButton
    android:id="@+id/remove_favorite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/half_dynamic_spacing"
    android:src="@drawable/ic_baseline_favorite_24"
    android:background="?android:selectableItemBackgroundBorderless"
    android:tooltipText="@string/remove_from_favorites"
    android:contentDescription="@string/remove_from_favorites"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>